{
  "name": "knorm",
  "description": "This repository contains code for @knorm/knorm and it's plugins",
  "private": true,
  "author": "Joel Mukuthu <joelmukuthu@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "website",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}'",
    "lint:fix": "eslint --fix '*/**/*.{js,ts}'",
    "todo": "grep -rn -e TODO -e FIXME .",
    "docs": "lerna run --scope website start --stream",
    "docs:build": "lerna run --scope website build --stream",
    "mocha": "mocha",
    "nyc": "nyc mocha",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test": "docker-compose run --rm tests",
    "coverage": "docker-compose run --rm tests sh -c 'yarn nyc'",
    "examples:postgres": "docker-compose run --rm postgres-example"
  },
  "devDependencies": {
    "@types/mocha": "7.0.2",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "coveralls": "3.0.11",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-mocha": "6.3.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "knex": "0.15.2",
    "lerna": "3.20.2",
    "lodash": "4.17.15",
    "mocha": "7.1.1",
    "nyc": "14.1.1",
    "pg": "7.12.1",
    "pg-connection-string": "2.2.0",
    "prettier": "1.19.1",
    "proxyquire": "2.1.3",
    "rimraf": "3.0.2",
    "sinon": "7.4.2",
    "sql-bricks-postgres": "0.5.0",
    "ts-node": "8.8.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3",
    "unexpected": "11.8.0",
    "unexpected-knex": "2.0.0",
    "unexpected-sinon": "10.11.2"
  }
}
