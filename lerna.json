{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["website", "packages/*", "examples/*"],
  "npmClient": "yarn",
  "version": "independent",
  "ignoreChanges": [
    ".github/**/*",
    ".yarn/**/*",
    "util/**/*",
    "**/*.spec.{js,ts}",
    "**/*.md"
  ],
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): release [skip ci]"
    }
  }
}
